<% content_for :body_id do %>home<% end %>

<div id="promo-container">
	<div id="promo-button-container"></div>
	<div id="promo-box">
		<div id="promo-sliding-container">
			<% @stories.each do |story| %>
				<div class="promo-item">
					<% if story.url_link? %><a href="http://<%= story.url_link %>" target="_blank"><% end %>
					<%= image_tag story.image_url(:slideshowBg) %>
					<div class="promo-content <%= story.color_name %> <% if story.body? || story.title?%>text<% end %>">
						<% if story.title? %><h2><%= story.title.html_safe %></h2><% end %>
						<% if story.body? %><div class="body-text"><%= story.body.html_safe %></div><% end %>
					</div>
					<% if story.url_link? %></a><% end %>
				</div>
			<% end %>
		</div>
	</div>
	<img src="/assets/promoBorder.png" id="promo-border"/> 
</div>
                    
<div id="right-side-container">
	<!-- <p>If you had a<br /> time machine...<br />in 2013 you will.</p>
